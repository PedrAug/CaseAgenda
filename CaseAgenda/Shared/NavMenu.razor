<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">CaseAgenda</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <AuthorizeView Roles="admin,user">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="observable">
                        <span class="oi oi-aperture" aria-hidden="true"></span> Observable
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="admin, user">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="factory">
                        <span class="oi oi-wrench" aria-hidden="true"></span> Factory
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Roles="admin, user">
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="singleton">
                        <span class="oi oi-plus" aria-hidden="true"></span> Singleton
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
